# Supabase
# Get these values from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# File Proxy Service
NEXT_PUBLIC_FILE_PROXY_URL=http://localhost:3001

# OpenAI (for embeddings and semantic search)
OPENAI_API_KEY=sk-...

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# GitHub App (for repository sync)
# Create a GitHub App at: https://github.com/settings/apps/new
# Required permissions: Repository contents (read), Metadata (read)
# Callback URL: https://your-domain.com/api/github/install/callback
GITHUB_APP_ID=123456
GITHUB_APP_CLIENT_ID=Iv1.abc123def456
GITHUB_APP_CLIENT_SECRET=your-client-secret-here

# Encryption Key (for storing sensitive tokens)
# Generate a secure key using: openssl rand -hex 32
ENCRYPTION_KEY=your-64-character-hex-key-here
