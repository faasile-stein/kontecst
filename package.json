{
  "name": "kontecst",
  "version": "0.1.0",
  "private": true,
  "description": "Platform for versioned, queryable context for agentsâ€”served via API or managed vector stores",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:start": "./scripts/dev.sh",
    "dev:stop": "./scripts/stop.sh",
    "dev:status": "./scripts/status.sh",
    "setup": "./scripts/setup.sh",
    "build": "pnpm --filter \"./apps/*\" build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "type-check": "pnpm --filter \"./apps/*\" type-check",
    "clean": "pnpm --parallel --filter \"./apps/*\" clean && rm -rf node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "llm",
    "context",
    "markdown",
    "vector-store",
    "embeddings",
    "ai"
  ],
  "dependencies": {
    "sonner": "^2.0.7"
  }
}
